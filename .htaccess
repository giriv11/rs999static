# Security: Deny direct PHP execution
<Files *.php>
  Order allow,deny
  Deny from all
</Files>

# Cache static assets - Extended cache for better performance
<IfModule mod_expires.c>
  ExpiresActive On
  
  # Images - 1 year
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/avif "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/x-icon "access plus 1 year"
  
  # Fonts - 1 year
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType application/font-woff "access plus 1 year"
  ExpiresByType application/font-woff2 "access plus 1 year"
  
  # CSS and JavaScript - 1 month
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType text/javascript "access plus 1 month"
  
  # HTML - 1 hour
  ExpiresByType text/html "access plus 1 hour"
  
  # JSON - 1 hour
  ExpiresByType application/json "access plus 1 hour"
  
  # Default - 1 week
  ExpiresDefault "access plus 1 week"
</IfModule>

# Cache-Control headers for better browser caching
<FilesMatch "\.(jpg|jpeg|png|gif|webp|avif|svg|ico|woff|woff2|ttf)$">
  Header set Cache-Control "max-age=31536000, public, immutable"
</FilesMatch>

<FilesMatch "\.(css|js)$">
  Header set Cache-Control "max-age=2592000, public"
</FilesMatch>

<FilesMatch "\.(html|json)$">
  Header set Cache-Control "max-age=3600, public, must-revalidate"
</FilesMatch>

# Enable GZIP Compression
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Redirect non-www to www (Permanent 301 redirect)
<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # Redirect rs999.in to www.rs999.in
  RewriteCond %{HTTP_HOST} ^rs999\.in$ [NC]
  RewriteRule ^(.*)$ https://www.rs999.in/$1 [L,R=301]
  
  # Force HTTPS (if not already handled by hosting provider)
  # Uncomment if needed:
  # RewriteCond %{HTTP:X-Forwarded-Proto} !https
  # RewriteCond %{HTTPS} off
  # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>

# Block access to sensitive files
<FilesMatch "(^\.git|^\.env|^\.htaccess|^\.htpasswd|wp-config\.php|readme\.md)">
  Order allow,deny
  Deny from all
</FilesMatch>

# Prevent directory browsing
Options -Indexes

