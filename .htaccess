# Security: Deny direct PHP execution
<Files *.php>
  Order allow,deny
  Deny from all
</Files>

# Cache static assets
<FilesMatch "\.(html|css|js|json|jpg|jpeg|png|gif|webp|avif|svg|ico|woff|woff2|ttf)$">
  Header set Cache-Control "max-age=3600, public"
</FilesMatch>

# Enable GZIP Compression
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Redirect non-www to www (Permanent 301 redirect)
<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # Redirect rs999.in to www.rs999.in
  RewriteCond %{HTTP_HOST} ^rs999\.in$ [NC]
  RewriteRule ^(.*)$ https://www.rs999.in/$1 [L,R=301]
  
  # Force HTTPS (if not already handled by hosting provider)
  # Uncomment if needed:
  # RewriteCond %{HTTP:X-Forwarded-Proto} !https
  # RewriteCond %{HTTPS} off
  # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>

# Block access to sensitive files
<FilesMatch "(^\.git|^\.env|^\.htaccess|^\.htpasswd|wp-config\.php|readme\.md)">
  Order allow,deny
  Deny from all
</FilesMatch>

# Prevent directory browsing
Options -Indexes

